#!/bin/bash

echo "Syncing"

echo "Sync Work Computer?"
select yn in "Yes" "No"; do
    case $yn in
	Yes )
        echo "Syncing Work Computer"
        # sync only vimrc for work computer (mac)
        dotfiles="vimrc"
	    break;;
    No )
        echo "Syncing Home Computer"
        # sync all dotfiles for home computer (linux)
        dotfiles="vimrc bashrc xsessionrc Xresources dir_colors tmux.conf gitconfig"
        break;;
    esac
done

for f in $dotfiles; do
    if [ -f $HOME/.$f ]; then
        rm $HOME/.$f
    fi
    ln -s $HOME/dotfiles/$f $HOME/.$f
done

echo "Done"
